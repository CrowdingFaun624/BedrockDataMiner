{
    "default_type": "Serializer",
    "xml_serializer": {
        "serializer_class": "XmlSerializer"
    },
    "language_serializer": { // old lang files before 18w02a
        "serializer_class": "LanguageSerializer"
    },
    "manifest_serializer": {
        "serializer_class": "ManifestSerializer"
    },
    "fsh_serializer": {
        "serializer_class": "TextSerializer"
    },
    "vsh_serializer": {
        "serializer_class": "TextSerializer"
    },
    "glsl_serializer": {
        "serializer_class": "TextSerializer"
    },
    "text_serializer": {
        "serializer_class": "TextSerializer"
    },
    "cp1252_lines_serializer": {
        "serializer_class": "LinesSerializer",
        "arguments": {
            "encoding": "cp1252"
        }
    },
    "md3_serializer": {
        "serializer_class": "Md3Serializer"
    },
    "pack_mcmeta_serializer": {
        "serializer_class": "PackMcmetaSerializer"
    },
    "achievement_map_serializer": {
        "serializer_class": "AchievementMapSerializer"
    },
    "lines_serializer": {
        "serializer_class": "LinesSerializer"
    },
    "blockstates_fixer": { // 19w02a assets/minecraft/blockstates/acacia_wall_sign.json
        "serializer_class": "RepairableJsonSerializer",
        "arguments": {
            "rules": [
                {
                    "condition": {
                        "type": "suffix",
                        "content": "n"
                    },
                    "action": {
                        "type": "remove_suffix",
                        "content": "n"
                    }
                }
            ]
        }
    }
}